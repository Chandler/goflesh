<div class="simple-page full-height">
  <div class="row-fluid">
    <span class="span4 pad-span">
      <div class="side-profile">
      {{#linkTo 'organization.home' organization}} 
          <img class=" avatar profile_image pull-center" src="http://i.imgur.com/y9yAWbD.jpg">
      {{/linkTo}}
        <div class="page-heading">
          <h1><div class="profile-heading">{{name}}<div></h1>
            <div class="profile-sub-heading">
              {{#linkTo 'organization.home' organization}} {{organization.name}} {{/linkTo}}
              <div>
                {{#if App.Auth.signedIn}}
                  {{#if currentPlayer}}
                    <button class="btn disabled btn-large gamepage-join-btn">Joined</button>
                  {{else}}
                    <button class="btn btn-large gamepage-join-btn" {{action "joinGame" this}}>Join</button>
                  {{/if}}
                {{else}}
                  {{!-- {{#linkTo 'login' classNames="btn signin btn-large joined-button"}} Signin to join game {{/linkTo}} --}}
                {{/if}}
              </div>
            </div>
          <div class="description">
            {{description}}
          </div> 
          <hr>
          <div class="grids">
            <div class="avatar-grid">
            
              <h3 class="list-view">{{players.length}} Players</h3> <div class="see-all">{{#linkTo "game.players"}} See All {{/linkTo}}</div>
              {{#each players}}
                <div class="grid-pic"> 
                  {{#linkTo 'user.home' user}} {{avatar2 user.avatar size="small"}} {{/linkTo}}                  
                </div>
              {{/each}}
            </div>
          </div>  
        </div> 
      </div>
    </span>
    <span class="span8">
      {{outlet}}
    </span>
  </div>
</div>

