<div  id="new-org" class="simple-page">
  {{#if errorMessages}}
    <div class="alert alert-error">{{errorMessages}}</div>
  {{/if}}
  <div class="page-heading"><h1>Create an account!</h1></div>
  <div class="row-fluid">
    <span class="span12">
      <div class="form-fields">
        <div class="first_name">
          {{view Ember.TextField
            type="text"
            placeholder="first name"
            valueBinding="first_name"
          }}
        </div>
        <div class="last_name">
          {{view Ember.TextField
            type="text"
            placeholder="last name"
            valueBinding="last_name"
          }}
        </div>
         <div>
          {{view Ember.TextField
            type="text"
            placeholder="email"
            valueBinding="email"
          }}
        </div>
         <div>
          {{view Ember.TextField
            type="text"
            placeholder="screen name"
            valueBinding="screen_name"
          }}
        </div>
         <div>
          {{view Ember.TextField
            type="password"
            placeholder="password"
            valueBinding="password"
          }}
        </div>
        <div class="btn btn-large btn-block signup-btn" {{action "create"}}> Sign Up! </div>
      </div>
    </span>
  </div>
    <span class="clearfix"></span>
</div>