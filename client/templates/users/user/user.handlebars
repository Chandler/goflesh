<div class="container">
  <div>
    <input type="file" id="upload">
  </div>
</div>

<div class="simple-page">
  <div class="row-fluid">
    <span class="span4">
      <div class="side-profile">
        <div class="btn btn-large btn-block  row signup-btn" {{action "upload"}}>upload</div>

        {{avatar2 this size="profile" class="profile_image pull-center"}}
        <div class="page-heading">
        {{player}}
            <h1>{{first_name}} {{last_name}}'s Profile</h1>
            <hr>
        </div>
      </div>
    </span>
    <div class="profile-options">
      <div>
        {{#linkTo 'user.home' this classNames="profile-option-tab profile-home"}} 
        <i class="icon-home icon-2x"></i>{{/linkTo}}
      </div>
      <div>
        {{#linkTo 'user.settings' this classNames="profile-option-tab profile-home"}}
        <i class="icon-cog icon-2x"></i>{{/linkTo}}
      </div>
    </div>
    <span class="span5 profile-content-column">
      {{outlet}}
    </span>
  </div>
</div>
