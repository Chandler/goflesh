<div class="simple-page">
  <div class="row-fluid">
    <span class="span4">
      <div class="side-profile">
        {{#if userIsCurrentUser}}
          {{avatar2 this size="large" class="profile_image pull-center file_upload"}}
        {{else}}
          {{avatar2 this size="large" class="profile_image pull-center"}}
        {{/if}}
        <div class="page-heading">
        {{player}}
            <h1>{{first_name}} {{last_name}}'s Profile</h1>
            <hr>  
        </div>
      </div>
    </span>
    {{#if userIsCurrentUser}}
    <div class="profile-options">
      <div>
        {{#linkTo 'user.home' this classNames="profile-option-tab profile-home"}} 
        <i class="icon-home icon-2x"></i>{{/linkTo}}
      </div>
      <div>
        {{#linkTo 'user.settings' this classNames="profile-option-tab profile-home"}}
        <i class="icon-cog icon-2x"></i>{{/linkTo}}
      </div>
    </div>
    {{/if}}
    <span class="span5 profile-content-column">
      {{outlet}}
    </span>
  </div>
</div>
<!-- This is a hidden form needed by the avatar.io javascript library -->
<form class="hidden_form hover">
  <input type="file" id="avatar">
</form>

