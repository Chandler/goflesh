<div  id="org" class="simple-page">
  {{#if errorMessages}}
    <div class="alert alert-error">{{errorMessages}}</div>
  {{/if}}
  <h3>Sign in</h3>
  <div class="form-fields">

    <div class="row name field">
      {{view Ember.TextField
        type="text"
        placeholder="email"
        valueBinding="email"
      }}
    </div>
    <div class="row slug field">
      {{view Ember.TextField
        type="password"
        placeholder="password"
        valueBinding="password"
      }}
    </div>
  <div class="btn" {{action "login"}}>login </div>
</div>