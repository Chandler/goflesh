<div class="simple-page">
  <div class="row-fluid">
    <span class="span4">
      <div class="side-profile">
        {{avatar profile class="profile_image pull-center"}}
        <div class="page-heading">
          <h1>
            {{name}}
            <small>
              <br>{{location}}
            </small>
          </h1> 
          <hr>
          <h3>{{members.length}} Members</h3>
            <div class="avatar-grid">
            {{#each organization.members}}
              <div class="grid-pic"> 
                {{avatar tiny}}
              </div>
            {{/each}}
            {{#each members}}
              <div class="grid-pic"> 
                {{avatar tiny}}
              </div>
            {{/each}}
            {{#each members}}
              <div class="grid-pic"> 
                {{avatar tiny}}
              </div>
            {{/each}}
            </div>
        </div>
      </div>
    </span>
    <div class="profile-options">
      <div>
        {{#linkTo 'organization.home' this classNames="profile-option-tab profile-home"}} 
        <i class="icon-home icon-2x"></i>{{/linkTo}}
      </div>
      <div>
        {{#linkTo 'organization.settings' this classNames="profile-option-tab profile-home"}}
        <i class="icon-cog icon-2x"></i>{{/linkTo}}
      </div>
    </div>
    <span class="span5 profile-content-column">
      {{outlet}}
    </span>
  </div>
</div>