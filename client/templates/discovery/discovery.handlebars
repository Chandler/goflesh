<div id="discovery">
  <div class="org-search">
    <div class="search-box">
      {{view Ember.TextField
        type="text"
        placeholder="Search for an organization"
        id="login-name"
        action="updateFilter"
      }}
      <label class="org-search-icon fui-menu-24"></label>
      {{#each organizations}}
        {{view Em.App.ListItemView}}
      {{/each}}
    </div>
  </div>
</div> 