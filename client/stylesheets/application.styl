#signup  
  .row
    clear: both
  .fields
    float: left
    // margin-top: 200px
    // margin-left: 200px
  input
    width: large_signup_field_width
    height: 50px
    font-size: 22px
    line-height: 25px
  textarea
    width: large_signup_field_width
    height: 100px
  .fname, .lname
    input
      width: small_signup_field_width
      margin-left: auto
      margin-right: auto
      display: block
      margin-right: 15px
  .email, .password, .screenname
    input
      width: large_signup_field_width
  .signup-btn
    width: large_signup_field_width



#discovery
  padding-top: 150px
  .content-well
    border-radius: 8px 8px 6px 6px
    padding-top: 30px
