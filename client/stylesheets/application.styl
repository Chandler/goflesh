/* Lists */
.game-page-list-container
  border: 1px solid #dce7ee
  background-color: #FCFCFC
  overflow-x: hidden
  overflow-y: hidden
  width: 600px
  height: (1400-15)px /*hack to remove scroll bar */
.list-header
  box-sizing: border-box
  width: 100%
  padding: 10px 18px
  line-height: 20px
  border-bottom: 1px solid #bfcdd7
  font-family: proxima-nova,sans-serif
  font-size: 15px
  color: #747d92
  text-shadow: 0 1px #fff
  background-color: #f3f4f6
  .list-title
    margin-right: 20px
    text-transform: uppercase
  .selected
    padding: 5px
    border-radius: 4px;
    box-shadow: 0 0 3px 1px #2b95ca;
  .not-selected
    padding: 6px
    cursor: pointer
.ember-list-view
  margin-right: -15px
.event-feed-row
  height: 50px
  width: 600px
  line-height: 25px
  font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif
  font-size: 13px
  padding: 14px 18px
  border-top: 1px solid #dce7ee
  background-color: #fff
  float: left
  display: block
  .event-feed-cell
    position: relative
    display: inline-block
    margin-right: 10px
  .event-time
    margin-right: 10px
  .event-color
    width: 18px
    height: 10px
    background-color: #3E90D1
    margin-right: 15px
    border-radius: 4px;
  .event-description
    font-weight:bold;

